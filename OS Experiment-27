#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>
int main(int argc, char* argv[]) {
    const char* path = ".";  // Default path is the current directory
    if (argc > 1) {
        path = argv[1];
    }
    DIR* directory = opendir(path);
    if (directory == NULL) {
        perror("Error opening the directory");
        exit(1);
    }
    struct dirent* entry;
    while ((entry = readdir(directory)) != NULL) {
        printf("%s\n", entry->d_name);
    }
    closedir(directory);
    return 0;
}
